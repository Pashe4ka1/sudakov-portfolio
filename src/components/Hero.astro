          <path d="M3 7l9 6l9 -6" data-astro-cid-bbe6dxrz></path>
        </svg>
      </a>
    )}
    {siteConfig.social.vk && (
      <a href={siteConfig.social.vk} target="_blank" rel="noopener noreferrer" aria-label="VK" class="transition-colors duration-300 hover:text-[var(--accent-color)]" data-astro-cid-bbe6dxrz>

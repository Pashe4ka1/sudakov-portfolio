        <text x="250" y="80" fill="#1d4ed8" font-family="monospace" font-size="18" transform="rotate(-5)" data-astro-cid-bbe6dxrz>=&gt;</text>
        <text x="100" y="200" fill="#1d4ed8" font-family="monospace" font-size="22" transform="rotate(15)" data-astro-cid-bbe6dxrz>[]</text>
        <text x="300" y="180" fill="#1d4ed8" font-family="monospace" font-size="20" transform="rotate(-10)" data-astro-cid-bbe6dxrz>&lt;&gt;</text>
        <text x="200" y="250" fill="#1d4ed8" font-family="monospace" font-size="24" transform="rotate(5)" data-astro-cid-bbe6dxrz>()</text>

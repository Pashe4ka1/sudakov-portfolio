          <path d="M16 8c-1 0 -1.5 .5 -2 1.5" data-astro-cid-bbe6dxrz></path>
          <path d="M16 12v-4c-1.5 0 -2.5 1 -3 2" data-astro-cid-bbe6dxrz></path>
          <path d="M16 10.5c-.5 0 -1 .5 -1.5 1.5" data-astro-cid-bbe6dxrz></path>
        </svg>
